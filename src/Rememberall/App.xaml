<Application x:Class="Rememberall.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Rememberall"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--
                    Including resources here makes them available anywhere in the app
                    as Static/Dynamic Resources, and via App.Current.Resources
                
                    Remember: Order matters! A ResourceDictionary declared here only has
                    access to resources in ResourceDictionaries declared BEFORE itself
                    (even though IntelliSense doesn't think so)
                -->
                <ResourceDictionary Source="pack://application:,,,/res/Dimens.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/res/Icons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/res/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
